
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <div class="border-form-div">
    <h2 class="form-signin-heading">Sign Up</h2>
    <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
  
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
  
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password Confirmation' %>

    <div class="checkbox">
      <span>
        <label><%= f.check_box :remember_me %>I have read and agree to the <a href="#" style="color:#5FB5FF">Terms of Use </a>and <a href="#" style="color:#5FB5FF">Privacy Policy</a></label>
      </span>
      <div class="clear"></div>
    </div>
      
    <%= f.submit "Sign up", class: 'btn btn-success btn-block', style: "font-size: 1.6rem"%>

    <div class="social">
        <span> or sign in with social media </span>
      </div>
  <% end %>

  <%= render "devise/shared/links" %><br/>

  <%- if controller_name != 'sessions' %>
    <div class="already">Already have an account?
      <%= link_to "Log in", new_session_path(resource_name), style:"color:#66b3ff" %>
    </div>
  <% end -%>
</div>