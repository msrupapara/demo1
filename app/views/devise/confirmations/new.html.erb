
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
	
	<div class="border-form-div">
		<h2 class="form-signin-heading">Resend confirmation instructions</h2>
  	<%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, :placeholder => "Email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    <br/><br/>
  
  	<%= f.submit "Resend confirmation instructions", class: 'btn btn-success btn-block', style: "font-size: 1.6rem" %>
  
	<% end %>
	<%= render "devise/shared/links" %>
</div>