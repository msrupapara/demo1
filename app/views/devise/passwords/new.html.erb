
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

	<div class="border-form-div">
		<h2 class="form-signin-heading">Forgot your password?</h2>
		<%= devise_error_messages! %>
    
    <%= f.email_field :email, autofocus: true, :placeholder => "Email" %><br/><br/>

    <%= f.submit "Send me reset password instructions", class: 'btn btn-success btn-block', style: "font-size: 1.6rem" %>
	
	<% end %>

	<%= render "devise/shared/links" %>
</div>
