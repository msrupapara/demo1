<p id="notice"><%= notice %></p>
<div class="video" style="width:70%">
  <h1 class="text-center">Videos</h1>
  <br/>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @videos.each do |video| %>
          <tr>
            <td><%= video.title %></td>
            <td><%= video.description %></td>
            <td><%= link_to 'Show', video, style:"color:#fff" %> |
                <%= link_to 'Edit', edit_video_path(video), style:"color:#fff" %> |
                <%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' },style:"color:#fff" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br/>

  <%= link_to 'New Video', new_video_path, style:"color:#fff" %>
</div>